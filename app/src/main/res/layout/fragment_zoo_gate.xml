<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="wrap_content"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".ZooGate$PlaceholderFragment"
    android:id="@+id/section_layout">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:contentDescription="ROM Logo"
        android:src="@mipmap/ic_launcher"
        android:maxHeight="100dp"
        android:maxWidth="100dp"
        android:minHeight="75dp"
        android:minWidth="75dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Wild Life ROM"
        android:id="@+id/rom_title"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Aardvark"
        android:id="@+id/current_release"
        android:layout_below="@+id/rom_title"
        android:layout_centerHorizontal="true" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dip"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/imageView"
        android:background="#000000"
        android:id="@+id/view2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="OS Release:"
        android:id="@+id/textView2"
        android:layout_below="@+id/view2"
        android:layout_alignParentStart="true"
        android:layout_marginTop="70dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/OS_release"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:minWidth="50dp"
        android:layout_alignTop="@+id/textView2"
        android:layout_alignStart="@+id/current_release"
        android:text="L7"
        android:layout_alignParentStart="true"
        android:layout_marginStart="@dimen/indent_column_width" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/device_string"
        android:layout_alignTop="@+id/view2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:minWidth="50dp"
        android:typeface="serif"
        android:textStyle="bold"
        android:text="L7" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Build ID:"
        android:id="@+id/textView4"
        android:minWidth="50dp"
        android:layout_below="@+id/OS_release"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:minWidth="50dp"
        android:id="@+id/OS_display"
        android:layout_below="@+id/OS_release"
        android:layout_alignStart="@+id/OS_release"
        android:maxLines="2"
        android:text="L7"
        android:layout_marginStart="@dimen/indent_column_width"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="50dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Fingerprint:"
        android:id="@+id/textView5"
        android:layout_below="@+id/OS_display"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:minWidth="50dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/OS_fingerprint"
        android:layout_alignTop="@+id/textView5"
        android:layout_alignStart="@+id/OS_display"
        android:maxLines="3"
        android:text="L7"
        android:layout_marginStart="@dimen/indent_column_width"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Serial:"
        android:minWidth="50dp"
        android:id="@+id/textView6"
        android:layout_below="@+id/OS_fingerprint"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:minWidth="50dp"
        android:id="@+id/OS_serial"
        android:text="L7"
        android:layout_marginStart="@dimen/indent_column_width"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/textView6" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:minWidth="50dp"
        android:text="Kernel:"
        android:id="@+id/textView7"
        android:layout_below="@+id/textView6"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:minWidth="50dp"
        android:id="@+id/OS_Kernel"
        android:text="L7"
        android:layout_marginStart="@dimen/indent_column_width"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/textView7" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Radio Version:"
        android:minWidth="50dp"
        android:id="@+id/textView8"
        android:layout_below="@+id/OS_Kernel"
        android:layout_alignParentStart="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/OS_radio"
        android:minWidth="150sp"
        android:maxLines="2"
        android:text="L7"
        android:layout_marginStart="@dimen/indent_column_width"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/textView8" />


</RelativeLayout>
